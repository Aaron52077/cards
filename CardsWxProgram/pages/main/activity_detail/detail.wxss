/* pages/main/activity_detail/detail.wxss */
@import "../../../wxParse/wxParse.wxss";

page {
    background: #fff;
}

.cover {
    width: 100%;
    height: 328rpx;
}

.detail {
    padding: 0 24rpx;
    background: #fff;
}

.detail .title {
    padding: 24rpx 0;
    border-bottom: 2rpx solid #eee;
    overflow: hidden;
}

.detail .title-top {
    font-size: 30rpx;
    color: #282828;
}

.detail .title-top span {
    margin-left: 13rpx;
}

.detail .title-bottom {
    color: #999;
    font-size: 24rpx;
    display: flex;
    margin-top: 14rpx;
    justify-content: space-between;
}

.detail .detail-html {
    margin: 12px 0 60px;
    color: #666;
    font-size: 28rpx;
    line-height: 1.8;
}
.detail .detail-html image{
    width: 100%;
}
.sign {
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 36rpx;
    color: #fff;
    background: #00bbff;
    position: fixed;
    left: 0;
    bottom: 0;
}